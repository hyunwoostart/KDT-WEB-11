<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://code.jquery.com/jquery-latest.min.js"></script>
</head>
<body>
    <h1>이미지 바꾸기</h1>
    <img src="../public/img/01_apple.jpeg" alt="" width="300" height="300">
    <br />
    <% for(let i = 0; i < fruit.length; i++) { %>
        <button class="btn <%= fruit[i].name %>"> <%= fruit[i].kor %></button>
    <% } %>

    <script>
        $('.btn').click(function() {
            let name;
            if( $(this).hasClass('apple')) {
                name = '01_apple';
            } else  if ($(this).hasClass('banana')) {
                name = '02_banana';
            } else  if ($(this).hasClass('grape')) {
                name = '03_grape';
            } else if ($(this).hasClass('peach')) {
                name = '04_peach';
            }
            $('img').attr("src",  `../public/img/${name}.jpeg`);
        })
    </script>
</body>
</html>